@model IEnumerable<SkyHigh.Models.Flight>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Most Visited Flights";
}

<div class="most-visited-wrapper">
    <h2 class="page-title">Most Visited Flights</h2>

    <div class="flights-container">
        <div class="flights-grid">
            @foreach (var flight in Model)
            {
                <div class="flight-card">
                    <h3 class="flight-number">@flight.FlightNo</h3>
                    <p class="route">@flight.Source → @flight.Destination</p>
                    <p class="time">Departure: @flight.DepartureTime.ToString("dd-MM-yyyy HH:mm")</p>
                    <p class="time">Arrival: @flight.ArrivalTime.ToString("dd-MM-yyyy HH:mm")</p>
                    <a asp-action="FlightDetails" asp-route-id="@flight.FlightId" class="details-btn">View Details</a>
                </div>
            }
        </div>
    </div>

    <div class="back-wrapper">
        <button type="button" class="back-btn" onclick="history.back()">← Back</button>
    </div>
</div>

<style>
    /* ===== Background (same as PNR page) ===== */
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow-x: hidden;
    }

    .most-visited-wrapper {
        min-height: calc(100vh - 70px);
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 50px 40px;
        background: linear-gradient(120deg, #f5fafc, #e0f7fa, #fcefe3);
        background-size: 400% 400%;
        animation: smoothGradient 12s ease infinite;
        position: relative;
    }

    /* Background Animation */
    @@keyframes smoothGradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    /* Floating Glow Lights */
    .most-visited-wrapper::before,
    .most-visited-wrapper::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        opacity: 0.25;
        background: radial-gradient(circle, #ffddaa, transparent 70%);
        animation: floatGlow 20s linear infinite;
    }

    .most-visited-wrapper::before {
        width: 400px;
        height: 400px;
        top: -100px;
        left: -80px;
    }

    .most-visited-wrapper::after {
        width: 300px;
        height: 300px;
        bottom: -100px;
        right: -60px;
    }

    @@keyframes floatGlow {
        0% {
            transform: translate(0, 0) scale(1);
        }

        50% {
            transform: translate(60px, 80px) scale(1.1);
        }

        100% {
            transform: translate(0, 0) scale(1);
        }
    }

    /* ===== Title ===== */
    .page-title {
        text-align: center;
        font-size: 1.8rem;
        font-weight: 700;
        color: #4b3f35;
        margin-bottom: 35px;
    }

    /* ===== Container to Center the Grid ===== */
    .flights-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    .flights-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(280px, 1fr));
        gap: 30px;
        max-width: 1100px; /* fixed max width to maintain 3 columns */
        width: 100%;
    }

    /* ===== Flight Card ===== */
    .flight-card {
        background: rgba(255, 255, 255, 0.8);
        border-radius: 16px;
        padding: 25px 20px;
        text-align: center;
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(255, 223, 186, 0.4);
        transition: all 0.3s ease;
    }

        .flight-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(255, 183, 77, 0.25);
        }

    /* ===== Text Styling ===== */
    .flight-number {
        font-size: 1.3rem;
        font-weight: 700;
        color: #e58e26;
        margin-bottom: 5px;
    }

    .route {
        font-size: 1.05rem;
        color: #4b3f35;
        margin-bottom: 8px;
    }

    .time {
        font-size: 0.9rem;
        color: #6f5e4d;
        margin-bottom: 5px;
    }

    /* ===== Buttons ===== */
    .details-btn {
        background: linear-gradient(145deg, #ffb347, #ffcc33);
        color: #333;
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        box-shadow: 0 3px 10px rgba(255, 204, 51, 0.4);
        transition: all 0.3s ease;
        display: inline-block;
    }

        .details-btn:hover {
            background: linear-gradient(145deg, #ffd966, #fff3b0);
            transform: translateY(-2px);
        }

    /* ===== Back Button ===== */
    .back-wrapper {
        margin-top: 40px;
    }

    .back-btn {
        background: linear-gradient(145deg, #ffb347, #ffcc33);
        color: #333;
        border: none;
        padding: 10px 18px;
        font-size: 0.95rem;
        font-weight: 600;
        border-radius: 8px;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(255, 204, 51, 0.4);
        transition: all 0.3s ease;
    }

        .back-btn:hover {
            background: linear-gradient(145deg, #ffd966, #fff3b0);
            transform: translateY(-2px);
        }

    /* ===== Responsive Breakpoints ===== */
    @@media (max-width: 1024px) {
        .flights-grid {
            grid-template-columns: repeat(2, minmax(280px, 1fr));
        }
    }

    @@media (max-width: 700px) {
        .flights-grid {
            grid-template-columns: repeat(1, minmax(280px, 1fr));
        }
    }
</style>



