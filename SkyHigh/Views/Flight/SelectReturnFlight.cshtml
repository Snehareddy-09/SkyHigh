@model IEnumerable<SkyHigh.Models.Flight>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var outbound = ViewBag.OutboundFlight as SkyHigh.Models.Flight;
    DateTime? returnDate = ViewBag.ReturnDate as DateTime?;
}


<style>
    /* === Real Cloud Background (same as Search page) === */
    body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        background: url('/images/Register-bg-image15.jpeg') no-repeat center 60%;
        background-size: cover;
        background-attachment: scroll; /* scrolls naturally */
        overflow-x: hidden;
        position: relative;
    }

        /* Optional: add soft overlay for readability */
        body::before {
            content: "";
            position: fixed;
            inset: 0;
            background: rgba(255, 255, 255, 0.2); /* super light tint */
            backdrop-filter: blur(1px);
            z-index: -1;
        }

    /* Remove the dull background from the main section */
    .page-center {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: transparent !important; /* removed grey box */
        padding: 40px 20px;
    }

    /* Main content card */
    .centerbox {
        max-width: 750px;
        width: 100%;
        padding: 24px;
        background: rgba(255, 255, 255, 0.9); /* soft glass effect */
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 18px rgba(0, 0, 0, 0.15);
        border-radius: 12px;
        animation: fadeIn 1s ease-in-out;
    }

    h2 {
        font-weight: 700;
        color: #0078d7;
        text-align: center;
        margin-bottom: 20px;
    }
    /* === Back button styling (top-right corner) === */
    /* .back-btn {
                position: absolute;
                top: 12px;
                right: 18px;
                font-size: 0.95rem;
                border-radius: 6px;
