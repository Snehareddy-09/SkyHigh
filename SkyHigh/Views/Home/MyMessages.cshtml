@model IEnumerable<SkyHigh.Models.ContactMessage>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Messages - SkyHigh Airlines";
}

<div class="user-messages-container">
    <h2>📨 My Messages</h2>

    @if (!Model.Any())
    {
        <p style="color:#64748B;">You haven’t sent any messages yet.</p>
    }
    else
    {
        <table class="table table-striped message-table">
            <thead>
                <tr>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Submitted On</th>
                    <th>Admin Reply</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr>
                        <td>@msg.Subject</td>
                        <td>@msg.Message</td>
                        <td>@msg.SubmittedOn.ToString("dd MMM yyyy, hh:mm tt")</td>
                        <td>
                            @if (string.IsNullOrEmpty(msg.AdminReply))
                            {
                                <span style="color: #999;">Awaiting reply...</span>
                            }
                            else
                            {
                                <div class="replied-box">
                                    <strong>@msg.AdminReply</strong><br />
                                    <small><i>Replied on @msg.RepliedOn?.ToString("dd MMM yyyy, hh:mm tt")</i></small>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .user-messages-container {
        max-width: 900px;
        margin: 50px auto;
        background: #fff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.1);
    }

        .user-messages-container h2 {
            color: #007bff;
            font-weight: 700;
            margin-bottom: 25px;
        }

    .message-table th {
        background: #007bff;
        color: #fff;
        text-align: center;
    }

    .message-table td {
        color: #334155;
        vertical-align: middle;
    }

    .replied-box {
        background: #f1f5f9;
        border-left: 4px solid #007bff;
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 0.95rem;
    }
</style>

