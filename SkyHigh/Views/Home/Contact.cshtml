

@*pop up model*@

@model SkyHigh.Models.ContactMessage
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Contact Us";
}

<div class="contact-page-container">
    <!-- Hero Section -->
    <div class="contact-hero">
        <h1>Contact SkyHigh Airlines</h1>
        <p>We’re here to make your journey smooth and memorable. Reach out anytime for assistance.</p>
    </div>

    <div class="contact-grid">
        <div class="contact-form-card">
            <h3>Send Us a Message</h3>
            <p>Have questions, feedback, or special requests? Fill out the form below.</p>

            <!-- added anti-forgery token + ensured correct controller binding -->
            <form asp-action="Contact" asp-controller="Home" method="post" autocomplete="off" class="contact-form">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="Name">Full Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your full name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone">Phone Number</label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" required />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Subject">Subject</label>
                    <input asp-for="Subject" class="form-control" placeholder="Booking Inquiry, Feedback, etc." required />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message">Message</label>
                    <textarea asp-for="Message" rows="5" class="form-control" placeholder="Type your message here..." required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <!-- button unchanged, works properly -->
                <button type="submit" class="btn-submit">Send Message</button>

                <!-- success message fix: now works after redirect -->
                @if (TempData["ContactSuccess"] != null)
                {
                    <p class="success-msg">@TempData["ContactSuccess"]</p>
                }
            </form>
        </div>

        <!-- Airline Contact Info (unchanged) -->
        <div class="contact-info-card">
            <h3>Get in Touch</h3>
            <p><i class="bi bi-telephone-fill"></i> +91 98765 43210</p>
            <p><i class="bi bi-envelope-fill"></i>  skyhighairlinee@gmail.com</p>
            <p><i class="bi bi-geo-alt-fill"></i> SkyHigh Airlines HQ, kengeribus Terminal 3, Karnataka, India</p>

            <div class="social-links">
                <a href="https://www.youtube.com/%40SkyHighAirline-f1r" target="_blank" title="YouTube"><i class="bi bi-youtube"></i></a>
                <a href="https://x.com/SkyHighAirlinee?t=O-YqeXx6q0waXCnWmOukAg&s=08" target="_blank" title="Twitter"><i class="bi bi-twitter-x"></i></a>
                <a href="https://www.instagram.com/skyhigh_airlines" target="_blank" title="Instagram"><i class="bi bi-instagram"></i></a>
                <a href="https://www.linkedin.com/in/skyhigh-airlines-b1b47038b" target="_blank" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
            </div>

            <div class="support-hours">
                <h4>Customer Support Hours</h4>
                <p>Mon – Fri: 8:00 AM – 8:00 PM<br />Sat – Sun: 9:00 AM – 6:00 PM</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!--  keeps validation functional -->
    <partial name="_ValidationScriptsPartial" />
}

<!-- Airline Contact Page Styling (unchanged except tiny improvements) -->
