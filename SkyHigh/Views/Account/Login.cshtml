
@model SkyHigh.Models.LoginViewModel
 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* === Page Background === */
    body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        background: url('/images/Register-bg-image8.jpeg') no-repeat center center fixed;
        background-size: cover;
        position: relative;
    }

        /* === Semi-transparent overlay for readability === */
        body::before {
            content: "";
            position: fixed;
            inset: 0;
            background: rgba(255, 255, 255, 0.65);
            backdrop-filter: blur(3px);
            z-index: -1;
        }

    /* === Center Wrapper === */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 95vh;
        overflow: hidden;
    }

    /* === Card Wrapper === */
    .login-box {
        display: flex;
        width: 900px;
        max-width: 95%;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 10px 35px rgba(0, 0, 0, 0.15);
        background-color: rgba(255, 255, 255, 0.96);
        animation: fadeZoomIn 0.9s ease-out;
    }

    /* === Left Side (Form) === */
    .login-left {
        flex: 1;
        padding: 55px 60px;
        background-color: transparent;
        position: relative;
    }

        .login-left::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 70px;
            height: 70px;
            background-color: #0D47A1;
            clip-path: polygon(0 0, 100% 0, 0 100%);
        }

    .icon-circle {
        background-color: #0D47A1;
        color: #fff;
        width: 55px;
        height: 55px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        font-size: 1.4rem;
        margin-bottom: 18px;
        box-shadow: 0 4px 10px rgba(13, 71, 161, 0.3);
        animation: floatIcon 3s ease-in-out infinite;
    }

    h2 {
        font-weight: 700;
        color: #0D47A1;
        font-size: 2rem;
        margin-bottom: 25px;
    }

    .form-control {
        border-radius: 8px;
        border: 1.2px solid #ccd6e0;
        padding: 10px 12px;
        width: 100%;
        font-size: 1rem;
        margin-bottom: 15px;
        transition: box-shadow 0.2s ease, border-color 0.2s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #0D47A1;
            box-shadow: 0 0 0 3px rgba(13, 71, 161, 0.15);
        }

    .form-check {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 5px;
    }

        .form-check label {
            font-size: 0.95rem;
        }

        .form-check a {
            color: #0D47A1;
            text-decoration: none;
            font-weight: 500;
        }

            .form-check a:hover {
                text-decoration: underline;
            }

    .btn-login {
        background-color: #0D47A1;
        color: #fff;
        border: none;
        padding: 10px;
        width: 100%;
        border-radius: 8px;
        font-weight: 600;
        margin-top: 15px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-login:hover {
            background-color: #1565C0;
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(13, 71, 161, 0.2);
        }

    .register-link {
        margin-top: 20px;
        display: block;
        color: #0D47A1;
        text-decoration: none;
        font-weight: 500;
    }

        .register-link:hover {
            text-decoration: underline;
        }

    /* === Right Side (Image) === */
    .login-right {
        flex: 1;
        background: url('/images/airplane-wing2.jpeg') center center / cover no-repeat;
        position: relative;
        animation: imageFadeZoom 1.2s ease-out;
    }

        .login-right::after {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom right, rgba(255,255,255,0.05), rgba(0,0,0,0.15));
        }

    /* === Keyframes === */
    @@keyframes fadeZoomIn {
        from {
            opacity: 0;
            transform: scale(0.97) translateY(15px);
        }

        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }

    @@keyframes imageFadeZoom {
        from {
            opacity: 0;
            transform: scale(1.05);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes floatIcon {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-5px);
        }
    }

    /* === Responsive === */
    @@media (max-width: 768px) {
        .login-box {
            flex-direction: column;
        }

        .login-right {
            height: 220px;
        }

        .login-left {
            padding: 40px 25px;
        }
    }



    /* --- Login header (icon + text) --- */
    .login-header {
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }

    /* --- Profile icon next to Login --- */
    .login-icon {
        font-size: 2rem;
        color: #0D47A1;
    }



    /* adding this code sneh oct 20 */

    .alert {
        border-radius: 8px;
        font-weight: 500;
        padding: 10px 15px;
        margin-bottom: 15px;
    }

    .alert-danger {
        background: #fde8e8;
        color: #842029;
        border: 1px solid #f5c2c7;
        box-shadow: 0 2px 6px rgba(255, 0, 0, 0.1);
    }

</style>

<div class="login-container">
    <div class="login-box">
        <div class="login-left">
            <div class="login-header d-flex align-items-center mb-4">
                <i class="bi bi-person-circle login-icon me-2"></i>
                <h2 class="m-0">Login</h2>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Message</div>
            }

            <form asp-action="Login" method="post" autocomplete="off">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="Email" class="form-label fw-semibold text-dark"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label fw-semibold text-dark"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    @* <div>
<input asp-for="KeepLoggedIn" class="form-check-input" />
<label asp-for="KeepLoggedIn" class="form-check-label"></label>
</div> *@
                    <p class="text-center mt-3">
                        <a asp-controller="Account" asp-action="ResetPassword" class="text-decoration-none text-primary">
                            Forgot Password?
                        </a>
                    </p>
                </div>

                <button type="submit" class="btn-login">Login</button>
            </form>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }


            <a href="@Url.Action("Register", "Account")" class="register-link">New here? Register Now</a>
            <p class="mt-3 text-secondary" style="font-size:0.85rem;">© 2025 All Rights Reserved.</p>
        </div>

        <div class="login-right"></div>
    </div>
</div>




