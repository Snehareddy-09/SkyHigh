

@model SkyHigh.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reset Password";
}

<div class="reset-container">
    <div class="reset-card">
        <h2>Reset Your Password</h2>
        <p>Please enter your registered email and new password below.</p>

        @if (ViewBag.ResetError != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.ResetError</div>
        }
        else if (ViewBag.ResetSuccess != null)
        {
            <div class="alert alert-success text-center">@ViewBag.ResetSuccess</div>
        }

        <form asp-action="ResetPassword" method="post" class="reset-form">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your registered email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Reset Password</button>
        </form>

        <p class="text-center mt-3">
            <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-secondary">Back to Login</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<style>
    body {
        background: #f6f9fb;
        font-family: 'Montserrat', 'Segoe UI', Arial, sans-serif;
    }

    .reset-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
        padding: 20px;
    }

    .reset-card {
        background: #fff;
        border-radius: 14px;
        padding: 35px 45px;
        box-shadow: 0 4px 18px rgba(0, 0, 0, 0.08);
        max-width: 450px;
        width: 100%;
        text-align: center;
    }

        .reset-card h2 {
            color: #334155;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .reset-card p {
            color: #64748B;
            margin-bottom: 25px;
        }

    .form-group {
        text-align: left;
        margin-bottom: 16px;
    }

    label {
        font-weight: 600;
        color: #334155;
        display: block;
        margin-bottom: 6px;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1.5px solid #cbd5e1;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 6px rgba(0, 123, 255, 0.3);
            outline: none;
        }

    .btn-submit {
        width: 100%;
        background: linear-gradient(90deg, #007bff, #00bcd4);
        color: #fff;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        padding: 12px 20px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            background: linear-gradient(90deg, #00bcd4, #007bff);
            transform: scale(1.02);
        }

    .alert {
        border-radius: 8px;
        font-weight: 500;
        padding: 10px 15px;
        margin-bottom: 15px;
    }

    .alert-success {
        background: #e8fdf3;
        color: #0f5132;
        border: 1px solid #a3cfbb;
    }

    .alert-danger {
        background: #fde8e8;
        color: #842029;
        border: 1px solid #f5c2c7;
    }
</style>