@model SkyHigh.Models.Booking

@{
    // Safely retrieve flight info from ViewBag
    var flight = ViewBag.Flight as SkyHigh.Models.Flight;
    var returnFlight = ViewBag.ReturnFlight as SkyHigh.Models.Flight;
}

<div class="container py-5">
    <div class="card shadow-sm p-4 border-0 rounded-4">
        <h3 class="text-center text-primary mb-4">
            ✈️ Confirm Booking
        </h3>

        @* ----- Outbound Flight ----- *@
        @if (flight != null)
        {
            <h5 class="fw-semibold mb-2">Outbound Flight</h5>
            <p><strong>@flight.FlightNo</strong> — @flight.Source → @flight.Destination</p>
            <p>Departure: @flight.DepartureTime.ToString("dd MMM yyyy, HH:mm")</p>
        }
        else
        {
            <div class="text-danger">Flight information not available.</div>
        }

        @* ----- Return Flight (optional) ----- *@
        @if (returnFlight != null)
        {
            <hr />
            <h5 class="fw-semibold mb-2">Return Flight</h5>
            <p><strong>@returnFlight.FlightNo</strong> — @returnFlight.Source → @returnFlight.Destination</p>
            <p>Departure: @returnFlight.DepartureTime.ToString("dd MMM yyyy, HH:mm")</p>
        }

        <hr />

        @* ---------- Confirmation Form ---------- *@
        <form asp-controller="Booking" asp-action="ConfirmationPost" method="post">
            <input type="hidden" name="BookingId" value="@Model.BookingId" />
            <input type="hidden" name="FlightId" value="@(flight?.FlightId ?? Model.FlightId)" />
            <input type="hidden" name="ReturnFlightId" value="@(returnFlight?.FlightId ?? Model.ReturnFlightId ?? (int?)null)" />
            <input type="hidden" name="TripType" value="@Model.TripType" />
            <input type="hidden" name="TotalAmount" value="@Model.TotalAmount" />
            <input type="hidden" name="BookingDate" value="@Model.BookingDate" />

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-5 py-2 rounded-3 shadow-sm">
                    Confirm & Continue
                </button>
            </div>
        </form>
    </div>
</div>
