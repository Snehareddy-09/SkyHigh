@model SkyHigh.Models.Offer
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0 align-items-stretch">
            <!-- LEFT: Banner Image -->
            <div class="col-md-5 bg-light">
                <div class="offer-banner h-100">
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid w-100 h-100" style="object-fit:cover;">
                </div>
            </div>

            <!-- RIGHT: Offer Details -->
            <div class="col-md-7 d-flex align-items-center">
                <div class="p-4 p-md-5">
                    <h2 class="fw-bold text-primary mb-2">@Model.Title</h2>
                    <h5 class="text-success fw-semibold mb-3">@Model.DiscountText</h5>
                    <p class="text-muted mb-4">@Model.ShortDesc</p>

                    <div class="mb-3">
                        <span class="badge bg-info text-dark me-2">@Model.Category</span>
                        <span class="badge bg-light text-secondary border">Expires: @Model.ExpiresOn</span>
                    </div>

                    <div class="mb-4">
                        <p><strong>Sale Period:</strong> @Model.SalePeriod</p>
                        <p><strong>Travel Period:</strong> @Model.TravelPeriod</p>
                    </div>

                    <h5 class="fw-semibold mb-3">Offer Details</h5>
                    <ul class="list-group list-group-flush mb-4">
                        @foreach (var detail in Model.Details)
                        {
                            <li class="list-group-item border-0 ps-0">
                                <i class="bi bi-check-circle text-success me-2"></i>@detail
                            </li>
                        }
                    </ul>

                    <!-- Buttons -->
                    <div class="d-flex flex-wrap gap-2">
                        <a href="@Url.Action("Index", "Home")#offersCarouselHome" class="btn btn-outline-secondary px-4">
                            ← Back to Offers
                        </a>
                        <a href="@Url.Action("MostVisitedFlights", "Flight", new { offerId = Model.Id })" class="btn btn-primary px-4">
                            ✈️ Avail Offer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .offer-banner {
        background: linear-gradient(135deg, #e0f2fe, #f0fdfa);
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 10px 28px rgba(0, 0, 0, 0.1);
        }

    .btn {
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

    @@media (max-width: 767px) {
        .offer-banner img {
            height: 260px;
            object-fit: cover;
        }
    }
</style>


